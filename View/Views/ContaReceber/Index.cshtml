
@{
    ViewBag.Title = "Index";
}


<div id="wrapper">
    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Index" ,"Principal")">
                <i><img src="https://img.icons8.com/nolan/40/000000/fund-accounting.png"></i>
                <span>Principal</span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i><img src="https://img.icons8.com/nolan/40/000000/cashbook.png"></i>
                <span>Listas</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                <a class="dropdown-item" href="@Url.Action("Index" ,"Usuario")"> Usuários</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaPagar")">Contas a pagar</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Categoria")">Categorias</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Cliente")">Clientes</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaReceber")">Contas a Receber</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"CartaoCredito")">Cartões de Crédito</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Comprar")">Compras</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Contabilidade")">Contabilidade</a>
            </div>

        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Cadastro")">
                <i><img src="https://img.icons8.com/nolan/40/000000/accounting.png"></i>
                <span>Cadastrar Conta</span>
            </a>
        </li>
    </ul>
    <div id="content-wrapper">

        <div class="card mb-3">
            <div class="card-header">
                <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mt-1"><i class="fa fa-plus"></i> Nova Conta</a>
                <i class="fas fa-table fa-2x"></i> <i class="fa-2x">Contas a Receber</i>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Cliente</th>
                                <th>Categoria</th>
                                <th>Nome</th>
                                <th>Data de Pagamento</th>
                                <th>Valor</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Model.ContaReceber contaReceber in ViewBag.ContasReceber)
                            {
                                <tr>
                                    <td>@contaReceber.Id</td>
                                    <td>@contaReceber.Cliente.Nome</td>
                                    <td>@contaReceber.Categoria.Nome</td>
                                    <td>@contaReceber.Nome</td>
                                    <td>@contaReceber.DataPagamento.ToString("dd/MM/yyyy")</td>
                                    <td>@contaReceber.Valor</td>
                                    <td>
                                        <a href="@Url.Action("Editar", new { id = contaReceber.Id })" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Editar</a>
                                        <a href="@Url.Action("Apagar", new { id = contaReceber.Id })" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Apagar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Código</th>
                                <th>Cliente</th>
                                <th>Categoria</th>
                                <th>Nome</th>
                                <th>Data de Pagamento</th>
                                <th>Valor</th>
                                <th>Ação</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>