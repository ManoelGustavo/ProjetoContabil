
@{
    ViewBag.Title = "Editar";
}
<div id="wrapper">
    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Index" ,"Principal")">
                <i><img src="https://img.icons8.com/nolan/40/000000/fund-accounting.png"></i>
                <span>Principal</span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i><img src="https://img.icons8.com/nolan/40/000000/cashbook.png"></i>
                <span>Listas</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                <a class="dropdown-item" href="@Url.Action("Index" ,"Usuario")"> Usuários</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaPagar")">Contas a pagar</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Categoria")">Categorias</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Cliente")">Clientes</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaReceber")">Contas a Receber</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"CartaoCredito")">Cartões de Crédito</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Comprar")">Compras</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Contabilidade")">Contabilidade</a>
            </div>

        </li>
    </ul>
    <div class="container">
        <div class="card card-register mx-auto mt-4">
            <div class="card-header"> <i><img src="https://img.icons8.com/nolan/35/000000/insert-card.png"></i> Editar Cartão Crédito</div>
            <div class="card-body">
                <form action="@Url.Action("Update")" method="post">
                    <input type="hidden" name="id" value="@ViewBag.CartaoCredito.Id" />
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" id="id" name="id" class="form-control"
                                           placeholder="Código" required="required"
                                           value="@ViewBag.CartaoCredito.Id" readonly="readonly" />
                                    <label for="id">Código</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input type="text" id="numeroCartao" class="form-control cartao-credito" placeholder="Numero cartao" required="required" autofocus="autofocus" name="numero" value="@ViewBag.CartaoCredito.Numero">
                                    <label for="numeroCartao">Número</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input type="text" id="cvv" class="form-control" placeholder="cvv cartao" required="required" autofocus="autofocus" name="cvv" maxlength="3" value="@ViewBag.CartaoCredito.Cvv">
                                    <label for="cvv">CVV</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <select id="campo-categoria" name="idCliente" class="form-control" required="required">
                                        @foreach (Model.Cliente cliente in ViewBag.Clientes)
                                        {
                                            if (cliente.Id == ViewBag.CartaoCredito.IdCliente)
                                            {
                                                <option value="@cliente.Id" selected="selected">@cliente.Nome</option>
                                            }
                                            else
                                            {
                                                <option value="@cliente.Id">@cliente.Nome</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12 ">
                                <label for="campo-data-vencimento">Data Vencimento</label>
                                <input class="form-control" type="date" id="campo-data-vencimento" name="dataVencimento" placeholder="data Vencimento" required="required" autofocus="autofocus" value="@ViewBag.CartaoCredito.DataVencimento.ToString("yyyy-MM-dd")">
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-success col-md-12" type="submit">Registrar</button>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="@Url.Action("Index", "CartaoCredito")">Deseja editar algum cartão já cadastrado ?</a>
                </div>
            </div>
        </div>
    </div>
</div>