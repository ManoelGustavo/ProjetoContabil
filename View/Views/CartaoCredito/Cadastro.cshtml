
@{
    ViewBag.Title = "Cadastro";
}

<div id="wrapper">
    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Index" ,"Principal")">
                <i><img src="https://img.icons8.com/nolan/40/000000/fund-accounting.png"></i>
                <span>Principal</span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i><img src="https://img.icons8.com/nolan/40/000000/cashbook.png"></i>
                <span>Listas</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                <a class="dropdown-item" href="@Url.Action("Index" ,"Usuario")"> Usuarios</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaPagar")">Contas a pagar</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Categoria")">Categorias</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Cliente")">Clientes</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaReceber")">Contas a Receber</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"CartaoCredito")">Cartões de Crédito</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Comprar")">Compras</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Contabilidade")">Contabilidade</a>
            </div>

        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Cadastro")">
                <i><img src="https://img.icons8.com/nolan/40/000000/accounting.png"></i>
                <span>Cadastrar Categoria</span>
            </a>
        </li>
    </ul>
    <div class="container">
        <div class="card card-register mx-auto mt-4">
            <div class="card-header"> <i><img src="https://img.icons8.com/nolan/35/000000/insert-card.png"></i> Registro de cartão de crédito</div>
            <div class="card-body">
                <form action="@Url.Action("Store")">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input type="text" id="numeroCartao" class="form-control" placeholder="Numero cartao" required="required" autofocus="autofocus" name="numero">
                                    <label for="numeroCartao">Número</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input type="text" id="cvv" class="form-control" placeholder="cvv cartao" required="required" autofocus="autofocus" name="cvv">
                                    <label for="cvv">CVV</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <select id="campo-categoria" name="idCliente" class="form-control" required="required">
                                        <option disabled="disabled" placeholder="cliente id" selected="selected">Selecione o nome do cliente</option>
                                        @foreach (Model.Cliente cliente in ViewBag.Clientes)
                                        {
                                            <option value="@cliente.Id">@cliente.Nome </option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12 ">
                                <label for="data_nascimento">Data Vencimento</label>
                                <input class="form-control" type="date" id="data_vencimento" name="data_vencimento" placeholder="data Vencimento" required="required" autofocus="autofocus">
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-success col-md-12" type="submit">Registrar</button>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="#">Deseja editar algum cartão já cadastrado ?</a>
                </div>
            </div>
        </div>
    </div>
</div>

