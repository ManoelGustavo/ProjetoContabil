
@{
    ViewBag.Title = "Editar";
}
<div id="wrapper">
    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Index" ,"Principal")">
                <i><img src="https://img.icons8.com/nolan/40/000000/fund-accounting.png"></i>
                <span>Principal</span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i><img src="https://img.icons8.com/nolan/40/000000/cashbook.png"></i>
                <span>Listas</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                <a class="dropdown-item" href="@Url.Action("Index" ,"Usuario")"> Usuarios</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaPagar")">Contas a pagar</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Categoria")">Categorias</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Cliente")">Clientes</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaReceber")">Contas a Receber</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"CartaoCredito")">Cartões de Crédito</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Comprar")">Compras</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Contabilidade")">Contabilidade</a>
            </div>

        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Editar")">
                <i><img src="https://img.icons8.com/nolan/40/000000/accounting.png"></i>
                <span>Editar Categoria</span>
            </a>
        </li>
    </ul>
    <div class="container">
        <div class="card card-register mx-auto mt-4">
            <div class="card-header"> <i><img src="https://img.icons8.com/nolan/35/000000/receipt.png"></i> Registro de contas a pagar</div>
            <div class="card-body">
                <form action="@Url.Action("Update")" method="post">
                    <input type="hidden" name="id" value="@ViewBag.ContaPagar.Id" />
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input type="text" id="nome" class="form-control" placeholder="Conta pagar" required="required" name="nome" value="@ViewBag.ContaPagar.Nome">
                                    <label for="nome">Nome</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <select id="campo-categoria" name="idCliente" class="form-control" required="required">
                                        @foreach (Model.Cliente cliente in ViewBag.Clientes)
                                        {
                                            if (cliente.Id == ViewBag.ContaPagar.IdCliente)
                                            {
                                                <option value="@cliente.Id" selected="selected">@cliente.Nome</option>
                                            }
                                            else
                                            {
                                                <option value="@cliente.Id">@cliente.Nome </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <select id="campo-categoria" name="idCategoria" class="form-control" required="required">
                                        @foreach (Model.Categoria categoria in ViewBag.Categorias)
                                        {
                                            if (categoria.Id == ViewBag.ContaPagar.IdCategoria)
                                            {
                                                <option value="@categoria.Id" selected="selected">@categoria.Nome</option>
                                            }
                                            else
                                            {
                                                <option value="@categoria.Id">@categoria.Nome </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12 ">
                                <label for="campo-data-pagamento">Data Pagamento</label>
                                <input class="form-control campo-data" type="date" id="campo-data-pagamento" name="dataPagamento" placeholder="data pagamento" required="required" value="@ViewBag.ContaPagar.DataPagamento">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12 ">
                                <label for="campo-data-vencimento">Data Vencimento</label>
                                <input class="form-control campo-data" type="date" id="campo-data-vencimento" name="dataVencimento" placeholder="data_vencimento" required="required" value="@ViewBag.ContaPagar.DataVencimento">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    <input type="text" id="valor" class="form-control campo-valor" placeholder="valor" required="required" name="valor" value="@ViewBag.ContaPagar.Valor">
                                    <label for="valor">Valor</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-success col-md-12" type="submit">Registrar</button>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="@Url.Action("Index", "ContaPagar")">Deseja editar alguma compra cadastrada ?</a>
                </div>
            </div>
        </div>
    </div>
</div>
