
@{
    ViewBag.Title = "Editar";
}
<div id="wrapper">
    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="@Url.Action("Index" ,"Principal")">
                <i><img src="https://img.icons8.com/nolan/40/000000/fund-accounting.png"></i>
                <span>Principal</span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i><img src="https://img.icons8.com/nolan/40/000000/cashbook.png"></i>
                <span>Listas</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                <a class="dropdown-item" href="@Url.Action("Index" ,"Usuario")"> Usuarios</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaPagar")">Contas a pagar</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Categoria")">Categorias</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Cliente")">Clientes</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"ContaReceber")">Contas a Receber</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"CartaoCredito")">Cartões de Crédito</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Comprar")">Compras</a>
                <a class="dropdown-item" href="@Url.Action("Index" ,"Contabilidade")">Contabilidade</a>
            </div>

        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Cadastro")">
                <i><img src="https://img.icons8.com/nolan/40/000000/accounting.png"></i>
                <span>Cadastrar Categoria</span>
            </a>
        </li>
    </ul>
    <div class="container">
        <div class="card card-register mx-auto mt-4">
            <div class="card-header"><img src="https://img.icons8.com/nolan/35/000000/edit-user-male.png">Editar Cliente</div>
            <div class="card-body"></div>
            <form action="@Url.Action("Editar")">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input type="text" id="id" name="id" class="form-control"
                                       placeholder="Código" required="required"
                                       value="@ViewBag.Usuario.Id" readonly="readonly" />
                                <label for="id">Código</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input type="text" name="login" class="form-control"
                                       placeholder="Login" required="required" id="login"
                                       value="@ViewBag.Usuario.Login" />
                                <label for="login"> Login</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input type="text" name="senha" id="senha" class="form-control"
                                       placeholder="Senha" required="required"
                                       value="@ViewBag.Usuario.Senha" />
                                <label for="senha">Senha</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input type="datetime" name="data_nascimento" id="campo-data-vencimento"
                                       class="form-control" placeholder="Data Nascimento" required="required"
                                       value="@ViewBag.Usuario.DataNascimento" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <label for="campo-categoria">Categoria</label>
                                <select id="campo-categoria" name="idContabilidade" class="form-control" required="required">


                                    @foreach (Model.Contabilidade contabilidade in ViewBag.Contabilidades)
                                    {
                                        if (contabilidade.Id == ViewBag.Usuario.IdContabilidade)
                                        {
                                            <option value="@contabilidade.Id" selected="selected">@contabilidade.Nome</option>

                                        }
                                        else
                                        {
                                            <option value="@contabilidade.Id">@contabilidade.Nome</option>
                                        }

                                    }



                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-success col-md-12" type="submit">Editar</button>
            </form>
        </div>
    </div>
</div>